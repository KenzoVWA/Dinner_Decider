<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_food"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/selectedFoodTxt"
            app:fontFamily="@font/muli_bold" android:textSize="36sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="135dp"
            android:layout_height="130dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="144dp"/>
    <Button
            android:text="Decidir"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:id="@+id/decideBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorPrimary" android:textAllCaps="false" android:typeface="normal"
            android:textSize="30sp" android:lineSpacingExtra="8sp" android:textColor="@color/colorAccent"
            android:textStyle="bold"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodTxt"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.495"
            android:hint="Opcion para comer..." android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/addBtn"/>
    <Button
            android:text="Agregar Opcion"
            android:layout_width="189dp"
            android:layout_height="41dp"
            android:id="@+id/addBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
            android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toTopOf="@+id/decideBtn"/>

</android.support.constraint.ConstraintLayout>